{
  "name": "personal-website-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/website"
  ],
  "scripts": {
    "website:install": "cd apps/website && npm install",
    "website:dev": "cd apps/website && npm run dev",
    "website:build": "cd apps/website && npm run icons:rebuild && npm run build",
    "build:website": "npm run --workspace apps/website build",
    "icons:collect": "cd apps/website && npm run icons:collect",
    "icons:bundle": "cd apps/website && npm run icons:bundle",
    "icons:rebuild": "cd apps/website && npm run icons:rebuild",
    "cms:sanitize": "node apps/website/scripts/decap-sanitize-config.mjs",
    "cms:inspect": "node apps/website/scripts/decap-dedupe-inspect.mjs",
    "cms:preflight": "node apps/website/scripts/decap-config-preflight.mjs",
    "cms:devcfg": "node apps/website/scripts/cms-config-swap.mjs dev",
    "cms:prodcfg": "node apps/website/scripts/cms-config-swap.mjs prod",
    "dev": "npm run cms:devcfg && astro dev --host --port 4321 --strictPort",
    "build": "astro build",
    "build:prod": "npm run cms:prodcfg && npm --workspace apps/website run build",
    "deploy:prod": "docker compose -f compose.prod.yml up -d --build",
    "deploy:dev": "docker compose -f compose.dev.yml up -d --build",
    "deploy:stop": "docker compose -f compose.prod.yml down && docker compose -f compose.dev.yml down",
    "deploy:stop:prod": "docker compose -f compose.prod.yml down",
    "deploy:stop:dev": "docker compose -f compose.dev.yml down",
    "deploy:logs:prod": "docker compose -f compose.prod.yml logs -f",
    "deploy:logs:dev": "docker compose -f compose.dev.yml logs -f",
    "deploy:restart:prod": "docker compose -f compose.prod.yml restart",
    "deploy:restart:dev": "docker compose -f compose.dev.yml restart",
    "deploy:status": "docker compose -f compose.prod.yml ps && docker compose -f compose.dev.yml ps"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "astro-decap-cms-oauth": "^0.5.1",
    "js-yaml": "^4.1.0"
  }
}
