---
import type { ExperienceSection } from '../../types/sections/experience-section.types';
import DividedList from '../DividedList.astro';
import Divider from '../Divider.astro';
import SectionCard from '../SectionCard.astro';
import Job from './Job.astro';

export interface Props extends ExperienceSection {}

const { config, jobs } = Astro.props;
---

<SectionCard {...config}>
  <DividedList>
    {jobs.flatMap((job) => [<Job {...job} />, <Divider />])}
  </DividedList>
</SectionCard>