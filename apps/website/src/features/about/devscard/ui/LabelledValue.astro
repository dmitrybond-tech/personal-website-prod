---
import type { LabelledValue as LabelledValueType } from '../types/shared';

export interface Props extends LabelledValueType {}

const { label, value, url, fullRow } = Astro.props;
---

<div class:list={['flex flex-col gap-1', fullRow && 'col-span-2']}>
  <span class="text-sm font-medium text-gray-500 dark:text-gray-400">{label}</span>
  {url ? (
    <a
      href={url}
      class="text-sm text-gray-900 transition hover:text-primary-600 dark:text-gray-100 dark:hover:text-primary-400"
    >
      {value}
    </a>
  ) : (
    <span class="text-sm text-gray-900 dark:text-gray-100">{value}</span>
  )}
</div>
