---
import type { EducationSection } from '../../types/sections/education-section.types';
import DividedList from '../DividedList.astro';
import Divider from '../Divider.astro';
import SectionCard from '../SectionCard.astro';
import Education from './Education.astro';

export interface Props extends EducationSection {}

const { config, diplomas } = Astro.props;
---

<SectionCard {...config}>
  <DividedList>
    {diplomas.flatMap((diploma) => [<Education {...diploma} />, <Divider />])}
  </DividedList>
</SectionCard>