---
import type { Photo } from '../../types/shared';

export interface Props {
  src: Photo;
  alt: string;
  class?: string;
  width?: number;
  height?: number;
}

const { src, ...props } = Astro.props;

const isRemoteImage = typeof src === 'string';
---

{
  isRemoteImage ? (
    <img src={src} loading="lazy" decoding="async" {...props} />
  ) : (
    <img src={src} loading="lazy" decoding="async" {...props} />
  )
}