---
import type { Photo } from '../types/shared';

export interface Props {
  src: Photo;
  alt: string;
  class?: string;
  width?: number;
  height?: number;
}

const { src, ...props } = Astro.props;

const isRemoteImage = typeof src === 'string';
const loading = 'lazy';
---

{
  isRemoteImage ? (
    <img src={src} {...props} />
  ) : (
    <img src={src.src} loading={loading} {...props} />
  )
}
