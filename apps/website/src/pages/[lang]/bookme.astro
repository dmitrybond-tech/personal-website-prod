---
// src/pages/[lang]/bookme.astro
import AppShell from '../../app/layouts/AppShell.astro';
import BookMeSection from '../../app/entities/sections/ui/BookMeSection.astro';

const { lang } = Astro.params as { lang: 'en' | 'ru' };
---

<AppShell lang={lang}>
  <Fragment slot="head">
    <!-- Preload Cal CSS (harmless if not used); JS loads via helper -->
    <link rel="preload" as="style" href="https://cal.com/embed.css" />
    <link rel="preconnect" href="https://cal.com" crossorigin />
  </Fragment>
  <div class="py-8">
    <BookMeSection locale={lang} />
  </div>
</AppShell>
