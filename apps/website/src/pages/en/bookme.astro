---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '@widgets/navbar/ui/Navbar.astro';
import BookMeSection from '@entities/sections/ui/BookMeSection.astro';
import ThemeToggle from '@features/theme-toggle/ui/ThemeToggle.astro';

const locale = 'en';
---

<BaseLayout title="Book Me — Dmitry Bond" description="Schedule a meeting with Dmitry Bond" lang="en">
  <Navbar locale={locale} />
  <main class="bookme-page">
    <BookMeSection locale={locale} />
  </main>
  <ThemeToggle />
</BaseLayout>

<style>
  .bookme-page {
    min-height: 100vh;
    padding-top: 20px;
  }

  /* Ensure proper spacing for sticky navbar */
  body {
    margin: 0;
    padding: 0;
  }
</style>

<script type="module" is:inline>
  import { initCalEmbed } from '@shared/lib/cal/embed';
  // Lazy-монтирование включено конфигом; по дефолту тип — interview (30м)
  initCalEmbed('en', 'interview');
</script>