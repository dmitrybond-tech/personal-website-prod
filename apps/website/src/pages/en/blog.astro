---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '@app/widgets/navbar/ui/Navbar.astro';
import { listBlog } from '@app/content/lib/content';

const locale = 'en';
const pageTitle = 'Blog';
const posts = await listBlog(locale);
---

<BaseLayout title={pageTitle}>
  <Navbar locale={locale} />
  
  <main class="cv-container">
    <h1 class="mb-6 text-3xl font-bold">{pageTitle}</h1>
    
    {posts.length > 0 ? (
      <div class="space-y-6">
        {posts.map((post) => (
          <article class="cv-root p-6 border border-gray-200 rounded-lg">
            <h2 class="text-xl font-semibold mb-2">
              <a href={`/en/blog/${post.slug}`} class="text-blue-600 hover:text-blue-800">
                {post.data.title}
              </a>
            </h2>
            {post.data.summary && (
              <p class="text-gray-600 mb-3">{post.data.summary}</p>
            )}
            <div class="flex items-center text-sm text-gray-500">
              <time datetime={post.data.publishedAt.toISOString()}>
                {post.data.publishedAt.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              {post.data.tags && post.data.tags.length > 0 && (
                <span class="ml-4">
                  {post.data.tags.map(tag => (
                    <span class="inline-block bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs mr-1">
                      {tag}
                    </span>
                  ))}
                </span>
              )}
            </div>
          </article>
        ))}
      </div>
    ) : (
      <p class="text-gray-600">No blog posts available yet.</p>
    )}
  </main>
</BaseLayout>