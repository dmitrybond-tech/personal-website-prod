---
import { createCalDiagnosticPage } from '../../lib/cal-diagnostics';

const diagnosticData = createCalDiagnosticPage();

// Only render if DEBUG_CAL is enabled
if (!diagnosticData) {
  return Astro.redirect('/404');
}
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cal.com Diagnostics</title>
  <style>
    body { font-family: monospace; margin: 20px; background: #f5f5f5; }
    .container { max-width: 800px; margin: 0 auto; background: white; padding: 20px; border-radius: 8px; }
    .section { margin-bottom: 30px; padding: 15px; border: 1px solid #ddd; border-radius: 4px; }
    .example { margin: 10px 0; padding: 10px; background: #f9f9f9; border-left: 3px solid #007acc; }
    .url { color: #0066cc; word-break: break-all; }
    .error { color: #cc0000; }
    .success { color: #006600; }
  </style>
</head>
<body>
  <div class="container">
    <h1>üîç Cal.com Diagnostics</h1>
    
    <div class="section">
      <h2>Configuration</h2>
      <p><strong>Username:</strong> {diagnosticData.username || <span class="error">Not set</span>}</p>
      <p><strong>Base Link:</strong> <span class="url">{diagnosticData.baseLink || <span class="error">Not set</span>}</span></p>
      <p><strong>Events Count:</strong> {diagnosticData.events.length}</p>
    </div>

    <div class="section">
      <h2>Parsed Events</h2>
      {diagnosticData.events.length > 0 ? (
        <ul>
          {diagnosticData.events.map(event => (
            <li><strong>{event.slug}</strong>: {event.label}</li>
          ))}
        </ul>
      ) : (
        <p class="error">No events configured</p>
      )}
    </div>

    <div class="section">
      <h2>Data-cal-link Examples</h2>
      {diagnosticData.examples.map(example => (
        <div class="example">
          <p><strong>Event:</strong> {example.label} ({example.slug})</p>
          <p><strong>data-cal-link:</strong> <span class="url">{example.dataCalLink}</span></p>
          <p><strong>Overlay URL:</strong> <span class="url">{example.overlayUrl}</span></p>
        </div>
      ))}
    </div>

    <div class="section">
      <h2>Environment Variables</h2>
      <p><strong>DEBUG_CAL:</strong> {import.meta.env.DEBUG_CAL}</p>
      <p><strong>PUBLIC_CAL_USERNAME:</strong> {import.meta.env.PUBLIC_CAL_USERNAME || <span class="error">Not set</span>}</p>
      <p><strong>PUBLIC_CAL_EMBED_LINK:</strong> {import.meta.env.PUBLIC_CAL_EMBED_LINK || <span class="error">Not set</span>}</p>
      <p><strong>PUBLIC_CAL_EVENTS:</strong> {import.meta.env.PUBLIC_CAL_EVENTS || <span class="error">Not set</span>}</p>
    </div>
  </div>
</body>
</html>
