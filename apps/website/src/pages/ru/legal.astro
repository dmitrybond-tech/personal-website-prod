---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '@app/widgets/navbar/ui/Navbar.astro';
import { listLegal } from '@app/content/lib/content';

const locale = 'ru';
const pageTitle = 'Правовая информация';
const legalDocs = await listLegal(locale);
---

<BaseLayout title={pageTitle}>
  <Navbar locale={locale} />
  
  <main class="cv-container">
    <h1 class="mb-6 text-3xl font-bold">{pageTitle}</h1>
    
    {legalDocs.length > 0 ? (
      <div class="space-y-6">
        {legalDocs.map((doc) => (
          <article class="cv-root p-6 border border-gray-200 rounded-lg">
            <h2 class="text-xl font-semibold mb-2">
              <a href={`/ru/legal/${doc.slug}`} class="text-blue-600 hover:text-blue-800">
                {doc.data.title}
              </a>
            </h2>
            {doc.data.summary && (
              <p class="text-gray-600 mb-3">{doc.data.summary}</p>
            )}
            <div class="flex items-center text-sm text-gray-500">
              <time datetime={doc.data.updatedAt.toISOString()}>
                Последнее обновление: {doc.data.updatedAt.toLocaleDateString('ru-RU', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <p class="text-gray-600">Пока нет правовых документов.</p>
    )}
  </main>
</BaseLayout>