---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '@app/widgets/navbar/ui/Navbar.astro';
import CalBooking from '@widgets/cal/CalBooking.astro';
import ThemeToggle from '@features/theme-toggle/ui/ThemeToggle.astro';

const locale = 'ru';
---

<BaseLayout title="Записаться — Дмитрий Б." description="Записаться на встречу с Дмитрием Б." lang="ru">
  <Navbar locale={locale} />
  <main class="bookme-page">
    <CalBooking locale={locale} />
  </main>
  <ThemeToggle />
</BaseLayout>

<style>
  .bookme-page {
    min-height: 100vh;
    padding-top: 20px;
  }

  /* Ensure proper spacing for sticky navbar */
  body {
    margin: 0;
    padding: 0;
  }
</style>