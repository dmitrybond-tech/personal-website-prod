---
export interface Props {
  data: {
    items: Array<{
      name: string;
      description?: string;
      image?: string;
      url?: string;
      icon?: string;
    }>;
  };
}

const { data } = Astro.props;
const { mapIconToken } = await import('@shared/ui/icons/mapIconToken');
---

<div class="favorites-section bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
  <div class="mb-6">
    <div class="flex items-center gap-3 mb-4">
      <iconify-icon icon="fa6-solid:star" class="text-2xl text-blue-600 dark:text-blue-400"></iconify-icon>
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Favorites</h2>
    </div>
  </div>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    {data.items.map((item) => (
      <div class="favorite-item bg-gray-50 dark:bg-gray-700 rounded-lg p-4 hover:shadow-md transition-shadow">
        <div class="flex items-start gap-3">
          {item.image && (
            <img 
              src={item.image} 
              alt={item.name}
              class="w-12 h-12 rounded-lg object-cover flex-shrink-0"
            />
          )}
          
          {!item.image && item.icon && (
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center flex-shrink-0">
              <iconify-icon 
                icon={mapIconToken(item.icon) || 'fa6-solid:star'} 
                class="text-xl text-blue-600 dark:text-blue-400"
              ></iconify-icon>
            </div>
          )}
          
          <div class="flex-1 min-w-0">
            <h3 class="font-medium text-gray-900 dark:text-white mb-1">
              {item.url ? (
                <a 
                  href={item.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                >
                  {item.name}
                </a>
              ) : (
                item.name
              )}
            </h3>
            
            {item.description && (
              <p class="text-sm text-gray-600 dark:text-gray-300">
                {item.description}
              </p>
            )}
          </div>
        </div>
      </div>
    ))}
  </div>
</div>
