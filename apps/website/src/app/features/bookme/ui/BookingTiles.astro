---
// BookingTiles component for Cal.com integration
interface Props {
  locale?: 'en' | 'ru';
  events?: Array<{
    slug: string;
    label: string;
    duration: number;
  }>;
}

const { locale = 'en', events = [] } = Astro.props;

const texts = {
  en: {
    title: 'Choose your meeting type',
    subtitle: 'Select the duration that works best for you'
  },
  ru: {
    title: 'Выберите тип встречи',
    subtitle: 'Выберите продолжительность, которая вам подходит'
  }
};

const t = texts[locale];
---

<section class="booking-tiles">
  <div class="booking-header">
    <h2>{t.title}</h2>
    <p>{t.subtitle}</p>
  </div>
  
  {events.length > 0 && (
    <div class="tiles-grid">
      {events.map((event) => (
        <div class="booking-tile" data-slug={event.slug}>
          <h3>{event.label}</h3>
          <p class="duration">{event.duration} min</p>
        </div>
      ))}
    </div>
  )}
</section>

<style>
  .booking-tiles {
    padding: 2rem;
    text-align: center;
  }
  
  .booking-header h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  
  .booking-header p {
    color: #666;
    margin-bottom: 2rem;
  }
  
  .tiles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .booking-tile {
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 1.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .booking-tile:hover {
    border-color: #007bff;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.15);
  }
  
  .booking-tile h3 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .duration {
    color: #666;
    font-size: 0.9rem;
  }
</style>