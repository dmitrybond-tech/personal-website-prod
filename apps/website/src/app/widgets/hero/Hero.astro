---
// Placeholder Hero component
interface Props {
  title?: string;
  subtitle?: string;
}

const { title = "Hero Section", subtitle = "Welcome to our website" } = Astro.props;
---

<section class="hero-section">
  <h1>{title}</h1>
  <p>{subtitle}</p>
</section>

<style>
  .hero-section {
    text-align: center;
    padding: 2rem;
  }
  
  .hero-section h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }
  
  .hero-section p {
    font-size: 1.2rem;
    color: #666;
  }
</style>
