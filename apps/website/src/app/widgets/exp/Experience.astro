---
// Placeholder Experience component
interface Props {
  title?: string;
  items?: Array<{
    title: string;
    company: string;
    period: string;
    description: string;
  }>;
}

const { title = "Experience", items = [] } = Astro.props;
---

<section class="experience-section">
  <h2>{title}</h2>
  {items.length > 0 && (
    <div class="experience-list">
      {items.map((item) => (
        <div class="experience-item">
          <h3>{item.title}</h3>
          <p class="company">{item.company}</p>
          <p class="period">{item.period}</p>
          <p class="description">{item.description}</p>
        </div>
      ))}
    </div>
  )}
</section>

<style>
  .experience-section {
    padding: 2rem;
  }
  
  .experience-section h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
  }
  
  .experience-item {
    margin-bottom: 1.5rem;
    padding: 1rem;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
  }
  
  .experience-item h3 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .company {
    font-weight: 500;
    color: #333;
    margin-bottom: 0.25rem;
  }
  
  .period {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }
  
  .description {
    color: #555;
    line-height: 1.5;
  }
</style>
